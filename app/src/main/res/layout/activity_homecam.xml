<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeCamActivity">


    <TextView
        android:id="@+id/homecamtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Home Cam"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/move_btn"
        android:layout_width="218dp"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:text="모션 감지 기록"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/homecamtext"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/homecamtext"
        app:layout_constraintTop_toTopOf="@+id/homecamtext"
        />

    <Button
        android:id="@+id/cctv_btn"
        android:layout_width="218dp"
        android:layout_height="90dp"
        android:layout_marginTop="280dp"
        android:text="실시간 카메라"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/homecamtext"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/homecamtext"
        app:layout_constraintTop_toTopOf="@+id/homecamtext" />
</androidx.constraintlayout.widget.ConstraintLayout>